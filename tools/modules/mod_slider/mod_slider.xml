<extension type="module" version="2.5" client="site" method="upgrade">
    <name>mod_slider</name>
    <author>Nemo</author>
    <creationDate>Friday 31st 2015f July 2015 11:24:33 AM</creationDate>
    <copyright>
        GNU General Public License version 3 or later;
            See http://www.gnu.org/copyleft/gpl.html
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version></version>
    <description>MOD_SLIDER_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_slider">mod_slider.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_slider.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_slider.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_slider.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset
                name="slider"
                label="MOD_SLIDER_PARAMETERS"
            >
                <field
                    name="componentobject"
                    type="list"
                    label="MOD_SLIDER_FIELD_SELECT_COMPONENTOBJECT_LABEL"
                    description="MOD_SLIDER_FIELD_SELECT_COMPONENTOBJECT_DESC"
                    required="true"
                >
                    <option value="one">one</option>
                    <option value="two">two</option>

                </field>
                <field
                    name="ordering"
                    type="list"
                    label="MOD_SLIDER_FIELD_ORDERING_LABEL"
                    description="MOD_SLIDER_FIELD_ORDERING_DESC"
                >
                    <option value="items c_dsc">MOD_SLIDER_ITEMS_VALUE_RECENT_ADDED</option>
                    <option value="items m_dsc">MOD_SLIDER_ITEMS_VALUE_RECENT_MODIFIED</option>
                    <option value="items p_dsc">MOD_SLIDER_ITEMS_VALUE_RECENT_PUBLISHED</option>
                    <option value="items h_dsc">MOD_SLIDER_ITEMS_VALUE_MOST_HITS</option>
                    <option value="items n_asc">MOD_SLIDER_ITEMS_VALUE_NAME_ALPHA</option>
                    <option value="items n_dsc">MOD_SLIDER_ITEMS_VALUE_NAME_RALPHA</option>
                    <option value="items o_asc">MOD_SLIDER_ITEMS_VALUE_ORDERING</option>
                </field>
                <field
                    name="count"
                    type="text"
                    default="5"
                    label="MOD_SLIDER_FIELD_COUNT_LABEL"
                    description="MOD_SLIDER_FIELD_COUNT_DESC"
                />
                <field
                    name="itemid"
                    type="menuitem"
                    disable="separator"
                    label="MOD_SLIDER_FIELD_ITEMID_LABEL"
                    description="MOD_SLIDER_FIELD_ITEMID_DESC" >
                    <option
                        value="">JDEFAULT</option>
                </field>
            </fieldset>
            <fieldset
                name="advanced"
            >
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                />
                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                />
                <field
                    name="cachemode"
                    type="hidden"
                    default="static"
                >
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>