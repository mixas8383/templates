<extension type="component" version="3.3" method="upgrade">
    <name>com_wstools</name>
    <author></author>
    <creationDate>August 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>
    </description>
    <media destination="com_wstools" folder="media">
        <filename>index.html</filename>
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
    </media>

    <administration>
        <!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
        <menu img="../media/com_wstools/images/wstools.png"
              alt="Wstools">COM_WSTOOLS</menu>
        <submenu>
            <menu link="option=com_wstools&amp;view=remotemedias" alias="remotemedias" img="../media/com_wstools/images/wstools-remotemedias.png"
                    alt="Wstools/Remotemedias">COM_WSTOOLS_REMOTEMEDIAS</menu>
        </submenu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>wstools.php</filename>
            <filename>controller.php</filename>
            <filename>wstools_uninstall.html</filename>
            <filename>gpl-3.0.txt</filename>
            <filename>index.html</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>sql</folder>
            <folder>views</folder>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_wstools.sys.ini</language>
        </languages>
    </administration>

    <!-- Runs on install/uninstall/update; New in 1.6 -->
    <scriptfile>wstools_install.php</scriptfile>
          
    <install>
        <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.wstools_mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.wstools_mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <!-- Runs on update; -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    <config>
    
        <fields name="params">
            <fieldset
                name="versioncontrol"
                label="COM_WSTOOLS_FIELDSET_VERSION_CONTROL_LABEL"
		        description="COM_WSTOOLS_FIELDSET_VERSION_CONTROL_DESC"
	        >
                <field
			        name="history_limit"
			        type="text"
			        label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL"
			        description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC"
			        default="10"
			        filter="integer"
		        />
                <field
                    name="save_history"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL"
                    description="COM_WSTOOLS_SAVE_HISTORY_OPTIONS_DESC"
		        >
                    <option	value="1">JYES</option>
                    <option	value="0">JNO</option>
                </field>		        
                <field
			        name="remotemedia_save_history"
			        type="radio"
			        class="btn-group btn-group-yesno"
			        default="1"
			        label="COM_WSTOOLS_REMOTEMEDIAS_FIELD_SAVE_HISTORY_LABEL"
			        description="COM_WSTOOLS_REMOTEMEDIAS_FIELD_SAVE_HISTORY_DESC"
			        >
                    <option	value="1">JYES</option>
                    <option	value="0">JNO</option>
                </field>
            </fieldset>
            <fieldset
                name="global-permissions"
                label="COM_WSTOOLS_PERMISSIONS_LABEL"
                description="COM_WSTOOLS_PERMISSIONS_DESC"
	        >
                <field
                    name="rules"
                    type="rules"
                    label="COM_WSTOOLS_PERMISSIONS_LABEL"
                    filter="rules"
                    validate="rules"
                    component="com_wstools"
                    section="component"
		        />
            </fieldset>
        </fields>
    </config>    
</extension>

