        >
            <field
                name="enable_category"
				type="radio"
				label="COM_VIDEOMANAGER_DEFAULT_CATEGORY_LABEL"
				description="COM_VIDEOMANAGER_CATEGORIESES_DEFAULT_CATEGORY_DESC"
