	>
        <message>
			<![CDATA[COM_VIDEOMANAGER_CATEGORIESES_VIEW_FORM_DESC]]>
		</message>
	</layout>
    <!-- Add fields to the request variables for the layout. -->
    <fields
        name="params"
    >
