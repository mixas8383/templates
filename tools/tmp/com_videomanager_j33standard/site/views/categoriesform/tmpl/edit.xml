                addfieldpath="/administrator/components/com_categories/models/fields"
			/>
            <field
                name="show_categories_name"
                type="radio"
                label="COM_VIDEOMANAGER_SHOW_NAME_LABEL"
                description="COM_VIDEOMANAGER_CATEGORIESES_SHOW_NAME_DESC"
			    class="btn-group"
