<form
    addfieldpath="/components/com_videomanager/models/fields"
    addrulepath="/components/com_videomanager/models/rules"
>
    <fieldset>
        <field
			id="id"
			name="id"
			type="hidden"
			label="COM_VIDEOMANAGER_ID_LABEL"
			class="readonly"
			default="0"
			readonly="true"
		/>

        <field
			id="contenthistory"
			name="contenthistory"
			type="contenthistory"
			label="JTOOLBAR_VERSIONS"
			data-typeAlias="com_videomanager.video"
		/>
        <field
			id="asset_id"
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
        <field
			id="name"
			name="name"
			type="text"
			label="COM_VIDEOMANAGER_VIDEOS_FIELD_NAME_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_NAME_DESC"
			class="inputbox"
			size="50"
			required="true"
		/>
        <field
			id="alias"
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="COM_VIDEOMANAGER_FIELD_ALIAS_DESC"
    		class="inputbox"
			size="50"
			filter="unset"
		/>

        <field
		    id="introdescription"
		    name="introdescription"
			type="editor"
			label="JGLOBAL_DESCRIPTION"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_DESCRIPTION_DESC"
			class="inputbox"
            filter="JComponentHelper::filterText"
			buttons="true"
            hide="article,pagebreak"                
		/>
        <field
		    id="intro"
		    name="intro"
            type="editor"
			label="JGLOBAL_INTRO_TEXT"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_INTRO_DESC"
            class="inputbox"
            buttons="false"
            readonly="true"
        />
        <field
			id="catid"
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			extension="com_videomanager"
			class="inputbox"
			required="true"
            addfieldpath="/administrator/components/com_categories/models/fields"
		/>
        <field
            id="tags"
            name="tags"
            type="tag"
            label="JTAG"
            description="JTAG_DESC"
            class="inputbox"
            multiple="true"
	>
        </field>
        <field
			id="created"
			name="created"
			type="calendar"
			label="COM_VIDEOMANAGER_FIELD_CREATED_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_CREATED_BY_DESC"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"			
		/>
        <field
			id="created_by"
			name="created_by"
			type="user"
			label="COM_VIDEOMANAGER_FIELD_CREATED_BY_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_CREATED_BY_DESC"
		/>
        <field
			id="created_by_alias"
			name="created_by_alias"
			type="text"
			label="COM_VIDEOMANAGER_FIELD_CREATED_BY_ALIAS_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_CREATED_BY_ALIAS_DESC"
            class="inputbox"
            size="20"
		/>
        <field
            id="modified"
            name="modified"
            type="calendar"
			label="COM_VIDEOMANAGER_FIELD_MODIFIED_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_MODIFIED_DESC"
            class="readonly"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
        <field
            id="modified_by"
            name="modified_by"
            type="user"
		    label="COM_VIDEOMANAGER_FIELD_MODIFIED_BY_LABEL"
		    class="readonly"
		    readonly="true"
		    filter="unset"
		/>
        <field
			id="publish_up"
			name="publish_up"
			type="calendar"
			label="COM_VIDEOMANAGER_FIELD_PUBLISH_UP_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_PUBLISH_UP_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc"
		/>
        <field
			id="publish_down"
			name="publish_down"
			type="calendar"
			label="COM_VIDEOMANAGER_FIELD_PUBLISH_DOWN_LABEL"
			description="COM_VIDEOMANAGER_VIDEOS_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc"
		/>
        <field
            id="state"
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
            size="1"
            default="1"
	    >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASH</option>
        </field>
        <field
			id="access"
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
			default="1"
		/>
        <field
			id="featured"
			name="featured"
			type="radio"
			label="JGLOBAL_FIELD_FEATURED_LABEL"
			description="JGLOBAL_FIELD_FEATURED_DESC"
            class="btn-group"    
			default="0"
		>
            <option	value="1">JYES</option>
            <option	value="0">JNO</option>
        </field>
        <field
            id="language"
            name="language"
            type="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="JFIELD_LANGUAGE_DESC"
            class="inputbox"
 			default="*"
       >
            <option value="*">JALL</option>
        </field>
        <field
			id="version_note"
			name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox"
			size="45"
		/>
        <field
           id="metakey"
           name="metakey"
           type="textarea"
           label="JFIELD_META_KEYWORDS_LABEL"
           description="JFIELD_META_KEYWORDS_DESC"
           cols="60"
           rows="3"
	    />
        <field
            id="metadesc"
            name="metadesc"
            type="textarea"
            label="JFIELD_META_DESCRIPTION_LABEL"
            description="JFIELD_META_DESCRIPTION_DESC"
            cols="60"
            rows="3"
	    />
        <field
            id="robots"
            name="robots"
            type="list"
            label="COM_VIDEOMANAGER_FIELD_METADATA_ROBOTS_LABEL"
			class="chzn-color"
            description="COM_VIDEOMANAGER_FIELD_METADATA_ROBOTS_DESC"
		>
            <option value="">JGLOBAL_USE_GLOBAL</option>
            <option value="index, follow">COM_VIDEOMANAGER_FIELD_METADATA_ROBOTS_VALUE_INDEX_FOLLOW</option>
            <option value="noindex, follow">COM_VIDEOMANAGER_FIELD_METADATA_ROBOTS_VALUE_NOINDEX_FOLLOW</option>
            <option value="index, nofollow">COM_VIDEOMANAGER_FIELD_METADATA_ROBOTS_VALUE_INDEX_NOFOLLOW</option>
            <option value="noindex, nofollow">COM_VIDEOMANAGER_FIELD_METADATA_ROBOTS_VALUE_NOINDEX_NOFOLLOW</option>
        </field>
        <field
            id="author" 
            name="author" 
            type="text"
			label="JAUTHOR"
			description="COM_VIDEOMANAGER_FIELD_METADATA_AUTHOR_DESC"
			size="20"
		/>        
        <field
            id="xreference"
            name="xreference"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_XREFERENCE_LABEL"
            description="COM_VIDEOMANAGER_FIELD_XREFERENCE_DESC"
            class="inputbox"
            size="50"
        />
        <field
            id="metadata"
            name="metadata"
            type="editor"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_METADATA_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_METADATA_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			default=""
        >
        </field>  
        <field
            id="parentid"
            name="parentid"
            type="text"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_PARENTID_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_PARENTID_DESC"
            class="inputbox validate-numeric"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="attribs"
            name="attribs"
            type="textarea"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_ATTRIBS_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_ATTRIBS_DESC"
            class="inputbox"
			cols="50"
			rows="5"
			filter="safehtml"
        >
        </field>  
        <field
            id="mask"
            name="mask"
            type="text"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_MASK_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_MASK_DESC"
            class="inputbox validate-numeric"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="sectionid"
            name="sectionid"
            type="text"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_SECTIONID_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_SECTIONID_DESC"
            class="inputbox validate-numeric"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="fulltext"
            name="fulltext"
            type="editor"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_FULLTEXT_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_FULLTEXT_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			default=""
        >
        </field>  
        <field
            id="introtext"
            name="introtext"
            type="editor"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_INTROTEXT_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_INTROTEXT_DESC"
            width="100%"
			height="250"
			cols="50"
			rows="5"
			default=""
        >
        </field>  
        <field
            id="title_alias"
            name="title_alias"
            type="text"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_TITLE_ALIAS_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_TITLE_ALIAS_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
        <field
            id="title"
            name="title"
            type="text"
            label="COM_VIDEOMANAGER_VIDEOS_FIELD_TITLE_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_TITLE_DESC"
            class="inputbox"
			size="50"
			maxlength="255"
        >
        </field>  
    </fieldset>
    <fields
        name="images"
        label="COM_VIDEOMANAGER_VIDEOS_IMAGE_OPTIONS"
    >
        <field
            id="image_url"
            name="image_url"
            type="media"
            label="COM_VIDEOMANAGER_FIELD_IMAGE_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_IMAGE_DESC"
        />
        <field
            id="image_alt_text"
            name="image_alt_text"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_IMAGE_ALTTEXT_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_IMAGE_ALTTEXT_DESC"
            class="inputbox"
            size="20"
        />
        <field
            name="image_caption"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_IMAGE_CAPTION_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_IMAGE_CAPTION_DESC"
            class="inputbox"
            size="20"
        />
        <field
            id="intro_image_url"
            name="intro_image_url"
            type="media"
            label="COM_VIDEOMANAGER_FIELD_INTRO_IMAGE_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_INTRO_IMAGE_DESC"
        />
        <field
            id="intro_image_alt_text"
            name="intro_image_alt_text"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_INTRO_IMAGE_ALTTEXT_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_INTRO_IMAGE_ALTTEXT_DESC"
            class="inputbox"
            size="20"
        />
        <field
            name="intro_image_caption"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_INTRO_IMAGE_CAPTION_LABEL"
            description="COM_VIDEOMANAGER_VIDEOS_FIELD_INTRO_IMAGE_CAPTION_DESC"
            class="inputbox"
            size="20"
        />
    </fields>
    <fields
        name="urls"
        label="COM_VIDEOMANAGER_VIDEOS_URLS_OPTIONS"
    >
        <field
            id="urla"
            name="urla"
            type="url"
            label="COM_VIDEOMANAGER_FIELD_URLA_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_DESC"
            validate="url"
            filter="url"
        />
        <field
            id="urla_text"
            name="urla_text"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_URLA_LINK_TEXT_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_LINK_TEXT_DESC"
            class="inputbox"
            size="20"
        />
        <field
            id="urla_target"
            name="urla_target"
            type="list"
            label="COM_VIDEOMANAGER_FIELD_URLA_TARGET_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_TARGET_DESC"
			class="chzn-color"
            filter="options"
            default=""
        >
            <option value="">JGLOBAL_USE_GLOBAL</option>
            <option value="0">JBROWSERTARGET_PARENT</option>
            <option value="1">JBROWSERTARGET_NEW</option>
            <option value="2">JBROWSERTARGET_POPUP</option>
            <option value="3">JBROWSERTARGET_MODAL</option>
        </field>
        <field
                name="spacer3"
            type="spacer"
            hr="true"
				/>
        <field
            id="urlb"
            name="urlb"
            type="url"
            label="COM_VIDEOMANAGER_FIELD_URLB_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_DESC"
            validate="url"
            filter="url"
       />
        <field
            id="urlb_text"
            name="urlb_text"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_URLB_LINK_TEXT_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_LINK_TEXT_DESC"
            class="inputbox"
            size="20"
        />
        <field
            id="urlb_target"
            name="urlb_target"
            type="list"
            label="COM_VIDEOMANAGER_FIELD_URLB_TARGET_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_TARGET_DESC"
			class="chzn-color"
            default=""
            filter="options"
        >
            <option value="">JGLOBAL_USE_GLOBAL</option>
            <option value="0">JBROWSERTARGET_PARENT</option>
            <option value="1">JBROWSERTARGET_NEW</option>
            <option value="2">JBROWSERTARGET_POPUP</option>
            <option value="3">JBROWSERTARGET_MODAL</option>
        </field>
        <field
                name="spacer4"
            type="spacer"
            hr="true"
				/>
        <field
            id="urlc"
            name="urlc"
            type="url"
            label="COM_VIDEOMANAGER_FIELD_URLC_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_DESC"
            validate="url"
            filter="url"
        />
        <field
            id="urlc_text"
            name="urlc_text"
            type="text"
            label="COM_VIDEOMANAGER_FIELD_URLC_LINK_TEXT_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_LINK_TEXT_DESC"
            class="inputbox"
            size="20"
        />
        <field
            id="urlc_target"
            name="urlc_target"
            type="list"
            label="COM_VIDEOMANAGER_FIELD_URLC_TARGET_LABEL"
            description="COM_VIDEOMANAGER_FIELD_URL_TARGET_DESC"
			class="chzn-color"
            filter="options"
            default=""
        >
            <option value="">JGLOBAL_USE_GLOBAL</option>
            <option value="0">JBROWSERTARGET_PARENT</option>
            <option value="1">JBROWSERTARGET_NEW</option>
            <option value="2">JBROWSERTARGET_POPUP</option>
            <option value="3">JBROWSERTARGET_MODAL</option>
        </field>
    </fields>
</form>
