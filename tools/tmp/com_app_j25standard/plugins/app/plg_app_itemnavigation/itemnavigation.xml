<extension type="plugin" version="2.5" group="app" method="upgrade">
    <name>plg_app_itemnavigation</name>
    <author></author>
    <creationDate>July 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
	<description>PLG_APP_ITEMNAVIGATION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="itemnavigation">itemnavigation.php</filename>
		<filename>index.html</filename>
    </files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_app_itemnavigation.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_app_itemnavigation.sys.ini</language>
	</languages>
	<config>
		<fields
		    name="params"
		>
            <fieldset
                name="basic"
            >
                <field
                    name="item_position"
                    type="radio"
					label="PLG_APP_ITEMS_ITEMNAVIGATION_FIELD_POSITION_LABEL"
					description="PLG_APP_ITEMS_ITEMNAVIGATION_FIELD_POSITION_DESC"
					default="1"
				>
                    <option value="1">PLG_APP_ITEMNAVIGATION_FIELD_VALUE_BELOW</option>
                    <option value="0">PLG_APP_ITEMNAVIGATION_FIELD_VALUE_ABOVE</option>
                </field>
                <field name="item_relative"
                    type="radio"
                    default="1"
                    description="PLG_APP_ITEMS_ITEMNAVIGATION_FIELD_RELATIVE_DESC"
                    label="PLG_APP_ITEMS_ITEMNAVIGATION_FIELD_RELATIVE_LABEL"
			    >
                    <option value="1">PLG_APP_ITEMS_ITEMNAVIGATION_FIELD_VALUE_ITEM</option>
                    <option value="0">PLG_APP_ITEMNAVIGATION_FIELD_VALUE_TEXT</option>
                </field>
                <field
                    name="keep_item_itemid"
                    type="list"
                    label="COM_APP_KEEP_ITEMID_LABEL"
                    description="COM_APP_ITEMS_KEEP_ITEMID_DESC"
                    default="1"
		        >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>                
            </fieldset>

		</fields>
	</config>
</extension>
