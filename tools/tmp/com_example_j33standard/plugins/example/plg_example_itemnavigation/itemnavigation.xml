<extension type="plugin" version="3.3" group="example" method="upgrade">
    <name>plg_example_itemnavigation</name>
    <author></author>
    <creationDate>July 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
	<description>PLG_EXAMPLE_ITEMNAVIGATION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="itemnavigation">itemnavigation.php</filename>
		<filename>index.html</filename>
    </files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_example_itemnavigation.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_example_itemnavigation.sys.ini</language>
	</languages>
	<config>
		<fields
		    name="params"
		>
			<fieldset
			name="basic"
			>
			<field
			    name="item_position"
			    type="radio"
				label="PLG_EXAMPLE_ITEMS_ITEMNAVIGATION_FIELD_POSITION_LABEL"
				description="PLG_EXAMPLE_ITEMS_ITEMNAVIGATION_FIELD_POSITION_DESC"
                class="btn-group"
				default="1"
			>
			    <option value="1">PLG_EXAMPLE_ITEMNAVIGATION_FIELD_VALUE_BELOW</option>
			    <option value="0">PLG_EXAMPLE_ITEMNAVIGATION_FIELD_VALUE_ABOVE</option>
			</field>
			<field name="item_relative"
			    type="radio"
			    description="PLG_EXAMPLE_ITEMS_ITEMNAVIGATION_FIELD_RELATIVE_DESC"
			    label="PLG_EXAMPLE_ITEMS_ITEMNAVIGATION_FIELD_RELATIVE_LABEL"
                class="btn-group"    
			    default="1"
			>
			    <option value="1">PLG_EXAMPLE_ITEMS_ITEMNAVIGATION_FIELD_VALUE_ITEM</option>
			    <option value="0">PLG_EXAMPLE_ITEMNAVIGATION_FIELD_VALUE_TEXT</option>
			</field>
			<field
			    name="keep_item_itemid"
			    type="radio"
			    label="PLG_EXAMPLE_KEEP_ITEMID_LABEL"
			    description="PLG_EXAMPLE_ITEMS_KEEP_ITEMID_DESC"
                class="btn-group"    
			    default="1"
			>
                <option	value="1">JYES</option>
                <option	value="0">JNO</option>
            </field>                
			</fieldset>
		</fields>
	</config>
</extension>
