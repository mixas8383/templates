<extension type="module" version="3.3" client="site" method="upgrade">
    <name>mod_car</name>
    <author></author>
    <creationDate>April 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>MOD_CAR_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_car">mod_car.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_car.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_car.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_car.sys.ini</language>
    </languages>
     <config>
        <fields name="params">
            <fieldset
			    name="car"
			    label="MOD_CAR_PARAMETERS"
			>
                <field
                    name="componentobject"
                    type="list"
                    label="MOD_CAR_FIELD_SELECT_COMPONENTOBJECT_LABEL"
                    description="MOD_CAR_FIELD_SELECT_COMPONENTOBJECT_DESC"
			        class="chzn-color"
                    required="true"
		        >
                    <option value="Drive:Drives">Drive</option>
                    <option value="Model:Models">Model</option>
                    <option value="Car:Cars">Car</option>
                </field>
                <field
					name="user_id"
					type="radio"
					label="MOD_CAR_FIELD_USER_LABEL"
					description="MOD_CAR_FIELD_USER_DESC"
                    class="btn-group"
					default="0"
				>
                    <option value="0">MOD_CAR_VALUE_ANYONE</option>
                    <option value="by_me">MOD_CAR_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_CAR_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="ordering"
					type="list"
					label="MOD_CAR_FIELD_ORDERING_LABEL"
					description="MOD_CAR_FIELD_ORDERING_DESC"
			        class="chzn-color"
				>

                    <option value="drives c_dsc">MOD_CAR_DRIVES_VALUE_RECENT_ADDED</option>
                    <option value="drives m_dsc">MOD_CAR_DRIVES_VALUE_RECENT_MODIFIED</option>
                    <option value="drives p_dsc">MOD_CAR_DRIVES_VALUE_RECENT_PUBLISHED</option>
                    <option value="drives h_dsc">MOD_CAR_DRIVES_VALUE_MOST_HITS</option>
                    <option value="drives n_asc">MOD_CAR_DRIVES_VALUE_NAME_ALPHA</option>
                    <option value="drives n_dsc">MOD_CAR_DRIVES_VALUE_NAME_RALPHA</option>
                    <option value="drives o_asc">MOD_CAR_DRIVES_VALUE_ORDERING</option>
                    <option value="models c_dsc">MOD_CAR_MODELS_VALUE_RECENT_ADDED</option>
                    <option value="models m_dsc">MOD_CAR_MODELS_VALUE_RECENT_MODIFIED</option>
                    <option value="models p_dsc">MOD_CAR_MODELS_VALUE_RECENT_PUBLISHED</option>
                    <option value="models h_dsc">MOD_CAR_MODELS_VALUE_MOST_HITS</option>
                    <option value="models n_asc">MOD_CAR_MODELS_VALUE_NAME_ALPHA</option>
                    <option value="models n_dsc">MOD_CAR_MODELS_VALUE_NAME_RALPHA</option>
                    <option value="models o_asc">MOD_CAR_MODELS_VALUE_ORDERING</option>
                    <option value="cars c_dsc">MOD_CAR_CARS_VALUE_RECENT_ADDED</option>
                    <option value="cars m_dsc">MOD_CAR_CARS_VALUE_RECENT_MODIFIED</option>
                    <option value="cars p_dsc">MOD_CAR_CARS_VALUE_RECENT_PUBLISHED</option>
                    <option value="cars h_dsc">MOD_CAR_CARS_VALUE_MOST_HITS</option>
                    <option value="cars n_asc">MOD_CAR_CARS_VALUE_NAME_ALPHA</option>
                    <option value="cars n_dsc">MOD_CAR_CARS_VALUE_NAME_RALPHA</option>
                    <option value="cars o_asc">MOD_CAR_CARS_VALUE_ORDERING</option>
                </field>
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_CAR_FIELD_COUNT_LABEL"
					description="MOD_CAR_FIELD_COUNT_DESC"
				/>
                <field
					name="list-style"
					type="list"
					label="MOD_CAR_FIELD_STYLE_LABEL"
					description="MOD_CAR_FIELD_STYLE_DESC"					
			        class="chzn-color"
					default=""
				>
                    <option value="">MOD_CAR_VALUE_PLAIN</option>
                    <option value="ul">MOD_CAR_VALUE_BULLETS</option>
                    <option value="ol">MOD_CAR_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="MOD_CAR_FIELD_ITEMID_LABEL"
					description="MOD_CAR_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>
            </fieldset>

            <fieldset
				name="advanced"
			>
                <field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
                <field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

                <field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                    class="btn-group"
					default="1"
				>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
                <field
					name="cachemode"
					type="hidden"
					default="static"
				>
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>