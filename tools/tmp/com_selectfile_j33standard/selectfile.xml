    <administration>
        <!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
        <menu img="../media/com_selectfile/images/selectfile.png"
              alt="Selectfile">COM_SELECTFILE</menu>
        <submenu>
            <menu link="option=com_selectfile&amp;view=sizes" alias="sizes" img="../media/com_selectfile/images/selectfile-sizes.png"
                    alt="Selectfile/Sizes">COM_SELECTFILE_SIZES</menu>
        </submenu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>selectfile.php</filename>
            <filename>controller.php</filename>
            <filename>selectfile_uninstall.html</filename>
