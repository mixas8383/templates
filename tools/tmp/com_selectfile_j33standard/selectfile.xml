        </languages>
    </administration>

    <!-- Runs on install/uninstall/update; New in 1.6 -->
    <scriptfile>selectfile_install.php</scriptfile>
          
    <install>
        <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.selectfile_mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.selectfile_mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <!-- Runs on update; -->
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
