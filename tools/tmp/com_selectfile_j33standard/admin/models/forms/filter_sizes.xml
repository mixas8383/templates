<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_SELECTFILE_SIZES_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
        <field
			name="state"
			type="status"
			label="COM_SELECTFILE_FILTER_STATUS_LABEL"
			description="COM_SELECTFILE_FILTER_STATUS_DESC"
			onchange="this.form.submit();"
		>
            <option value="">COM_SELECTFILE_SELECT_STATUS</option>
        </field>
        <field
			name="access"
			type="accesslevel"
			label="JOPTION_FILTER_ACCESS"
			description="JOPTION_FILTER_ACCESS_DESC"
			onchange="this.form.submit();"
		>
            <option value="">JOPTION_SELECT_ACCESS</option>
        </field>
        <field
			name="created_by"
			type="sql"
			label="COM_SELECTFILE_FILTER_CREATED_BY_LABEL"
			description="COM_SELECTFILE_FILTER_CREATED_BY_DESC"
			onchange="this.form.submit();"
			query="SELECT `u`.`id` AS `value`, `u`.`name` AS `text`
			        FROM `#__users` AS `u`
			        INNER JOIN `#__selectfile_sizes` AS `a` ON `a`.`created_by` = `u`.`id`
			        GROUP BY `u`.`id`, `u`.`name`
			        ORDER BY `u`.`name`"
			key_field="value"
			value_field="text"			        			
		>
            <option value="">COM_SELECTFILE_SELECT_CREATED_BY</option>
        </field>
    </fields>
	<fields name="list">
		<field
			name="sort_table"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default=""
		>
			<option value="">JGLOBAL_SORT_BY</option>
            <option value="a.ordering">JGRID_HEADING_ORDERING</option>
            <option value="a.name">COM_SELECTFILE_FIELD_NAME_LABEL</option>
            <option value="a.state">COM_SELECTFILE_FIELD_STATUS_LABEL</option>
            <option value="a.access">JGRID_HEADING_ACCESS</option>
            <option value="created_by_name">COM_SELECTFILE_FIELD_CREATED_BY_LABEL</option>
            <option value="a.id">JGRID_HEADING_ID</option>
        </field>
        <field
            name="direction_table"
            type="list"
            label="JFIELD_ORDERING_DESC"
            onchange="this.form.submit();"
            default=""
		>
            <option value="">JFIELD_ORDERING_DESC</option>
            <option value="asc">JGLOBAL_ORDER_ASCENDING</option>
            <option value="desc">JGLOBAL_ORDER_DESCENDING</option>
        </field>
        <field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_SELECTFILE_LIST_LIMIT_LABEL"
			description="COM_SELECTFILE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
