<extension type="module" version="2.5" client="site" method="upgrade">
    <name>mod_example</name>
    <author></author>
    <creationDate>July 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>MOD_EXAMPLE_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_example">mod_example.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_example.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_example.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_example.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset
			    name="example"
			    label="MOD_EXAMPLE_PARAMETERS"
			>
                <field
                    name="componentobject"
                    type="list"
                    label="MOD_EXAMPLE_FIELD_SELECT_COMPONENTOBJECT_LABEL"
                    description="MOD_EXAMPLE_FIELD_SELECT_COMPONENTOBJECT_DESC"
                    required="true"
		        >
                    <option value="Item:Items">Item</option>
                </field>
                <field
					name="user_id"
					type="list"
					label="MOD_EXAMPLE_FIELD_USER_LABEL"
					description="MOD_EXAMPLE_FIELD_USER_DESC"
					default="0"
				>
                    <option value="0">MOD_EXAMPLE_VALUE_ANYONE</option>
                    <option value="by_me">MOD_EXAMPLE_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_EXAMPLE_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="ordering"
					type="list"
					label="MOD_EXAMPLE_FIELD_ORDERING_LABEL"
					description="MOD_EXAMPLE_FIELD_ORDERING_DESC"
				>

                    <option value="items c_dsc">MOD_EXAMPLE_ITEMS_VALUE_RECENT_ADDED</option>
                    <option value="items m_dsc">MOD_EXAMPLE_ITEMS_VALUE_RECENT_MODIFIED</option>
                    <option value="items p_dsc">MOD_EXAMPLE_ITEMS_VALUE_RECENT_PUBLISHED</option>
                    <option value="items h_dsc">MOD_EXAMPLE_ITEMS_VALUE_MOST_HITS</option>
                    <option value="items n_asc">MOD_EXAMPLE_ITEMS_VALUE_NAME_ALPHA</option>
                    <option value="items n_dsc">MOD_EXAMPLE_ITEMS_VALUE_NAME_RALPHA</option>
                    <option value="items o_asc">MOD_EXAMPLE_ITEMS_VALUE_ORDERING</option>
                </field>
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_EXAMPLE_FIELD_COUNT_LABEL"
					description="MOD_EXAMPLE_FIELD_COUNT_DESC"
				/>
                <field
					name="style"
					type="list"
					label="MOD_EXAMPLE_FIELD_STYLE_LABEL"
					description="MOD_EXAMPLE_FIELD_STYLE_DESC"
					default=""
				>
                    <option value="">MOD_EXAMPLE_VALUE_PLAIN</option>
                    <option value="ul">MOD_EXAMPLE_VALUE_BULLETS</option>
                    <option value="ol">MOD_EXAMPLE_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="MOD_EXAMPLE_FIELD_ITEMID_LABEL"
					description="MOD_EXAMPLE_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>
            </fieldset>

            <fieldset
				name="advanced"
			>
                <field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
                <field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

                <field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
                <field
					name="cachemode"
					type="hidden"
					default="static"
				>
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>