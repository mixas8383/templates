<extension type="plugin" version="3.3" group="nicegallery" method="upgrade">
    <name>plg_nicegallery_vote</name>
    <author></author>
    <creationDate>August 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
	<description>PLG_NICEGALLERY_VOTE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="vote">vote.php</filename>
		<filename>index.html</filename>
	</files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_nicegallery_vote.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_nicegallery_vote.sys.ini</language>
    </languages>
	<config>
        <fields
		    name="params"
		>
            <fieldset
                name="basic"
            >
                <field
                    name="coments_position"
                    type="radio"
					label="PLG_NICEGALLERY_COMENTSES_VOTE_FIELD_POSITION_LABEL"
					description="PLG_NICEGALLERY_COMENTSES_VOTE_FIELD_POSITION_DESC"
					default="1"
				>
                    <option value="1">PLG_NICEGALLERY_VOTE_FIELD_VALUE_BELOW</option>
                    <option value="0">PLG_NICEGALLERY_VOTE_FIELD_VALUE_ABOVE</option>
                </field>
                <field
                    name="vote_position"
                    type="radio"
					label="PLG_NICEGALLERY_VOTES_VOTE_FIELD_POSITION_LABEL"
					description="PLG_NICEGALLERY_VOTES_VOTE_FIELD_POSITION_DESC"
					default="1"
				>
                    <option value="1">PLG_NICEGALLERY_VOTE_FIELD_VALUE_BELOW</option>
                    <option value="0">PLG_NICEGALLERY_VOTE_FIELD_VALUE_ABOVE</option>
                </field>
                <field
                    name="config_position"
                    type="radio"
					label="PLG_NICEGALLERY_CONFIGS_VOTE_FIELD_POSITION_LABEL"
					description="PLG_NICEGALLERY_CONFIGS_VOTE_FIELD_POSITION_DESC"
					default="1"
				>
                    <option value="1">PLG_NICEGALLERY_VOTE_FIELD_VALUE_BELOW</option>
                    <option value="0">PLG_NICEGALLERY_VOTE_FIELD_VALUE_ABOVE</option>
                </field>
                <field
                    name="image_position"
                    type="radio"
					label="PLG_NICEGALLERY_IMAGES_VOTE_FIELD_POSITION_LABEL"
					description="PLG_NICEGALLERY_IMAGES_VOTE_FIELD_POSITION_DESC"
					default="1"
				>
                    <option value="1">PLG_NICEGALLERY_VOTE_FIELD_VALUE_BELOW</option>
                    <option value="0">PLG_NICEGALLERY_VOTE_FIELD_VALUE_ABOVE</option>
                </field>
            </fieldset>

        </fields>
	</config>
</extension>
