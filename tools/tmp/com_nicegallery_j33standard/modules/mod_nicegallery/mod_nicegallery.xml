<extension type="module" version="3.3" client="site" method="upgrade">
    <name>mod_nicegallery</name>
    <author></author>
    <creationDate>August 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>MOD_NICEGALLERY_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_nicegallery">mod_nicegallery.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_nicegallery.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_nicegallery.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_nicegallery.sys.ini</language>
    </languages>
     <config>
        <fields name="params">
            <fieldset
			    name="nicegallery"
			    label="MOD_NICEGALLERY_PARAMETERS"
			>
                <field
                    name="componentobject"
                    type="list"
                    label="MOD_NICEGALLERY_FIELD_SELECT_COMPONENTOBJECT_LABEL"
                    description="MOD_NICEGALLERY_FIELD_SELECT_COMPONENTOBJECT_DESC"
			        class="chzn-color"
                    required="true"
		        >
                    <option value="Coments:Comentses">Coments</option>
                    <option value="Vote:Votes">Vote</option>
                    <option value="Config:Configs">Config</option>
                    <option value="Image:Images">Image</option>
                </field>
                <field
					name="user_id"
					type="radio"
					label="MOD_NICEGALLERY_FIELD_USER_LABEL"
					description="MOD_NICEGALLERY_FIELD_USER_DESC"
                    class="btn-group"
					default="0"
				>
                    <option value="0">MOD_NICEGALLERY_VALUE_ANYONE</option>
                    <option value="by_me">MOD_NICEGALLERY_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_NICEGALLERY_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="ordering"
					type="list"
					label="MOD_NICEGALLERY_FIELD_ORDERING_LABEL"
					description="MOD_NICEGALLERY_FIELD_ORDERING_DESC"
			        class="chzn-color"
				>

                    <option value="comentses c_dsc">MOD_NICEGALLERY_COMENTSES_VALUE_RECENT_ADDED</option>
                    <option value="comentses m_dsc">MOD_NICEGALLERY_COMENTSES_VALUE_RECENT_MODIFIED</option>
                    <option value="comentses p_dsc">MOD_NICEGALLERY_COMENTSES_VALUE_RECENT_PUBLISHED</option>
                    <option value="comentses h_dsc">MOD_NICEGALLERY_COMENTSES_VALUE_MOST_HITS</option>
                    <option value="comentses n_asc">MOD_NICEGALLERY_COMENTSES_VALUE_NAME_ALPHA</option>
                    <option value="comentses n_dsc">MOD_NICEGALLERY_COMENTSES_VALUE_NAME_RALPHA</option>
                    <option value="comentses o_asc">MOD_NICEGALLERY_COMENTSES_VALUE_ORDERING</option>
                    <option value="votes c_dsc">MOD_NICEGALLERY_VOTES_VALUE_RECENT_ADDED</option>
                    <option value="votes m_dsc">MOD_NICEGALLERY_VOTES_VALUE_RECENT_MODIFIED</option>
                    <option value="votes p_dsc">MOD_NICEGALLERY_VOTES_VALUE_RECENT_PUBLISHED</option>
                    <option value="votes h_dsc">MOD_NICEGALLERY_VOTES_VALUE_MOST_HITS</option>
                    <option value="votes n_asc">MOD_NICEGALLERY_VOTES_VALUE_NAME_ALPHA</option>
                    <option value="votes n_dsc">MOD_NICEGALLERY_VOTES_VALUE_NAME_RALPHA</option>
                    <option value="votes o_asc">MOD_NICEGALLERY_VOTES_VALUE_ORDERING</option>
                    <option value="configs c_dsc">MOD_NICEGALLERY_CONFIGS_VALUE_RECENT_ADDED</option>
                    <option value="configs m_dsc">MOD_NICEGALLERY_CONFIGS_VALUE_RECENT_MODIFIED</option>
                    <option value="configs p_dsc">MOD_NICEGALLERY_CONFIGS_VALUE_RECENT_PUBLISHED</option>
                    <option value="configs h_dsc">MOD_NICEGALLERY_CONFIGS_VALUE_MOST_HITS</option>
                    <option value="configs n_asc">MOD_NICEGALLERY_CONFIGS_VALUE_NAME_ALPHA</option>
                    <option value="configs n_dsc">MOD_NICEGALLERY_CONFIGS_VALUE_NAME_RALPHA</option>
                    <option value="configs o_asc">MOD_NICEGALLERY_CONFIGS_VALUE_ORDERING</option>
                    <option value="images c_dsc">MOD_NICEGALLERY_IMAGES_VALUE_RECENT_ADDED</option>
                    <option value="images m_dsc">MOD_NICEGALLERY_IMAGES_VALUE_RECENT_MODIFIED</option>
                    <option value="images p_dsc">MOD_NICEGALLERY_IMAGES_VALUE_RECENT_PUBLISHED</option>
                    <option value="images h_dsc">MOD_NICEGALLERY_IMAGES_VALUE_MOST_HITS</option>
                    <option value="images n_asc">MOD_NICEGALLERY_IMAGES_VALUE_NAME_ALPHA</option>
                    <option value="images n_dsc">MOD_NICEGALLERY_IMAGES_VALUE_NAME_RALPHA</option>
                    <option value="images o_asc">MOD_NICEGALLERY_IMAGES_VALUE_ORDERING</option>
                </field>
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_NICEGALLERY_FIELD_COUNT_LABEL"
					description="MOD_NICEGALLERY_FIELD_COUNT_DESC"
				/>
                <field
					name="list-style"
					type="list"
					label="MOD_NICEGALLERY_FIELD_STYLE_LABEL"
					description="MOD_NICEGALLERY_FIELD_STYLE_DESC"					
			        class="chzn-color"
					default=""
				>
                    <option value="">MOD_NICEGALLERY_VALUE_PLAIN</option>
                    <option value="ul">MOD_NICEGALLERY_VALUE_BULLETS</option>
                    <option value="ol">MOD_NICEGALLERY_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="MOD_NICEGALLERY_FIELD_ITEMID_LABEL"
					description="MOD_NICEGALLERY_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>
            </fieldset>

            <fieldset
				name="advanced"
			>
                <field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
                <field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

                <field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                    class="btn-group"
					default="1"
				>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
                <field
					name="cachemode"
					type="hidden"
					default="static"
				>
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>