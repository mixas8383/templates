<extension type="module" version="3.3" client="site" method="upgrade">
	<name>mod_[%%architectcomp%%]_itemses</name>
    <author>[%%COMPONENTAUTHOR%%]</author>
    <creationDate>[%%COMPONENTCREATED%%]</creationDate>
    <copyright>
        [%%COMPONENTCOPYRIGHT%%]
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail>[%%COMPONENTEMAIL%%]</authorEmail>
    <authorUrl>[%%COMPONENTWEBSITE%%]</authorUrl>
    <version>[%%COMPONENTSTARTVERSION%%]</version>
	<description>MOD_[%%ARCHITECTCOMP%%]_ITEMSES_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_[%%architectcomp%%]_itemses">mod_[%%architectcomp%%]_itemses.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_[%%architectcomp%%]_itemses.xml</filename>
	</files>
	<languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_[%%architectcomp%%]_itemses.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_[%%architectcomp%%]_itemses.sys.ini</language>
	</languages>
    <config>
        <fields name="params">
			<fieldset 
			    name="itemses"
			    label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_PARAMETERS"
			>
                <field
                    name="items_layout"
                    type="componentlayout"
                    label="JGLOBAL_FIELD_LAYOUT_LABEL"
                    description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_CHOOSE_LAYOUT_DESC"
                    menuitems="true"
                    extension="[%%com_architectcomp%%]"
                    view="items"
                    default="_:default"
		        />
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_COUNT_LABEL"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_COUNT_DESC"
				/>
                <field
					name="catid"
					type="categoryedit"
					extension="[%%com_architectcomp%%]"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_CATEGORY_DESC"
                    addfieldpath="/administrator/components/com_categories/models/fields"
				>
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>

                <field
					name="show_featured"
					type="radio"
					label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_FEATURED_LABEL"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_FEATURED_DESC"
                    class="btn-group"			
					default=""
				>
                    <option
						value="">JSHOW</option>
                    <option
						value="0">JHIDE</option>
                    <option
						value="1">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_ONLY_SHOW_FEATURED</option>
                </field>

                <field
					name="ordering"
					type="list"
					label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_ORDERING_LABEL"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_ORDERING_DESC"
			        class="chzn-color"
				>
                    <option value="c_dsc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_RECENT_ADDED</option>
                    <option value="m_dsc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_RECENT_MODIFIED</option>
                    <option value="p_dsc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_RECENT_PUBLISHED</option>
                    <option value="h_dsc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_MOST_HITS</option>
                    <option value="n_asc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_NAME_ALPHA</option>
                    <option value="n_dsc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_NAME_RALPHA</option>
                    <option value="o_asc">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_ORDERING</option>
                </field>

                <field
					name="user_id"
					type="radio"
					label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_USER_LABEL"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_USER_DESC"
                    class="btn-group"
					default="0"
				>
                    <option value="0">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_ANYONE</option>
                    <option value="by_me">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="list-style"
					type="list"
					label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_STYLE_LABEL"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_STYLE_DESC"
			        class="chzn-color"
					default=""
				>
                    <option value="">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_PLAIN</option>
                    <option value="ul">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_BULLETS</option>
                    <option value="ol">MOD_[%%ARCHITECTCOMP%%]_ITEMSES_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					label="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_ITEMID_LABEL"
					description="MOD_[%%ARCHITECTCOMP%%]_ITEMSES_FIELD_ITEMID_DESC" >
                    <option	value="">JDEFAULT</option>
                </field>                
            </fieldset>

			<fieldset
				name="advanced"
			>
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                    class="btn-group"
					default="1"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
