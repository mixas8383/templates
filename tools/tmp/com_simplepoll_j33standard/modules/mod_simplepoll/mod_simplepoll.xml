<extension type="module" version="3.3" client="site" method="upgrade">
    <name>mod_simplepoll</name>
    <author></author>
    <creationDate>September 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>MOD_SIMPLEPOLL_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_simplepoll">mod_simplepoll.php</filename>
        <folder>tmpl</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_simplepoll.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_simplepoll.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_simplepoll.sys.ini</language>
    </languages>
     <config>
        <fields name="params">
            <fieldset
			    name="simplepoll"
			    label="MOD_SIMPLEPOLL_PARAMETERS"
			>
                <field
                    name="componentobject"
                    type="list"
                    label="MOD_SIMPLEPOLL_FIELD_SELECT_COMPONENTOBJECT_LABEL"
                    description="MOD_SIMPLEPOLL_FIELD_SELECT_COMPONENTOBJECT_DESC"
			        class="chzn-color"
                    required="true"
		        >
                    <option value="Answers:Answerses">Answers</option>
                    <option value="Poll:Polls">Poll</option>
                </field>
                <field
					name="user_id"
					type="radio"
					label="MOD_SIMPLEPOLL_FIELD_USER_LABEL"
					description="MOD_SIMPLEPOLL_FIELD_USER_DESC"
                    class="btn-group"
					default="0"
				>
                    <option value="0">MOD_SIMPLEPOLL_VALUE_ANYONE</option>
                    <option value="by_me">MOD_SIMPLEPOLL_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_SIMPLEPOLL_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="ordering"
					type="list"
					label="MOD_SIMPLEPOLL_FIELD_ORDERING_LABEL"
					description="MOD_SIMPLEPOLL_FIELD_ORDERING_DESC"
			        class="chzn-color"
				>

                    <option value="answerses c_dsc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_RECENT_ADDED</option>
                    <option value="answerses m_dsc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_RECENT_MODIFIED</option>
                    <option value="answerses p_dsc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_RECENT_PUBLISHED</option>
                    <option value="answerses h_dsc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_MOST_HITS</option>
                    <option value="answerses n_asc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_NAME_ALPHA</option>
                    <option value="answerses n_dsc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_NAME_RALPHA</option>
                    <option value="answerses o_asc">MOD_SIMPLEPOLL_ANSWERSES_VALUE_ORDERING</option>
                    <option value="polls c_dsc">MOD_SIMPLEPOLL_POLLS_VALUE_RECENT_ADDED</option>
                    <option value="polls m_dsc">MOD_SIMPLEPOLL_POLLS_VALUE_RECENT_MODIFIED</option>
                    <option value="polls p_dsc">MOD_SIMPLEPOLL_POLLS_VALUE_RECENT_PUBLISHED</option>
                    <option value="polls h_dsc">MOD_SIMPLEPOLL_POLLS_VALUE_MOST_HITS</option>
                    <option value="polls n_asc">MOD_SIMPLEPOLL_POLLS_VALUE_NAME_ALPHA</option>
                    <option value="polls n_dsc">MOD_SIMPLEPOLL_POLLS_VALUE_NAME_RALPHA</option>
                    <option value="polls o_asc">MOD_SIMPLEPOLL_POLLS_VALUE_ORDERING</option>
                </field>
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_SIMPLEPOLL_FIELD_COUNT_LABEL"
					description="MOD_SIMPLEPOLL_FIELD_COUNT_DESC"
				/>
                <field
					name="list-style"
					type="list"
					label="MOD_SIMPLEPOLL_FIELD_STYLE_LABEL"
					description="MOD_SIMPLEPOLL_FIELD_STYLE_DESC"					
			        class="chzn-color"
					default=""
				>
                    <option value="">MOD_SIMPLEPOLL_VALUE_PLAIN</option>
                    <option value="ul">MOD_SIMPLEPOLL_VALUE_BULLETS</option>
                    <option value="ol">MOD_SIMPLEPOLL_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="MOD_SIMPLEPOLL_FIELD_ITEMID_LABEL"
					description="MOD_SIMPLEPOLL_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>
            </fieldset>

            <fieldset
				name="advanced"
			>
                <field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
                <field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

                <field
					name="cache"
					type="radio"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
                    class="btn-group"
					default="1"
				>
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
                <field
					name="cachemode"
					type="hidden"
					default="static"
				>
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>