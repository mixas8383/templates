<extension type="plugin" version="3.3" group="search" method="upgrade">
	<name>plg_search_answerses</name>
    <author></author>
    <creationDate>September 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
	<description>PLG_SEARCH_ANSWERSES_XML_DESCRIPTION</description>
	<files>
		<filename plugin="answerses">answerses.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_answerses.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_search_answerses.sys.ini</language>
	</languages>
	<config>
		<fields
		    name="params"
		>

			<fieldset
			    name="basic-options"
               label="PLG_SEARCH_ANSWERSES_PARAMETERS"
			    
			>
                <field
                    name="layout"
                    type="componentlayout"
                    label="JGLOBAL_FIELD_LAYOUT_LABEL"
                    description="COM_SIMPLEPOLL_ANSWERSES_CHOOSE_LAYOUT_DESC"
                    menuitems="true"
                    extension="com_simplepoll"
                    view="answers"
                    default="_:default"
		        />
     
                <field
				    name="search_limit"
				    type="text"
					label="PLG_SEARCH_ANSWERSES_FIELD_SEARCHLIMIT_LABEL"
					description="PLG_SEARCH_ANSWERSES_FIELD_SEARCHLIMIT_DESC"
					default="50"
					size="5"
				/>
                <field
                    name="search_answerses"
                    type="radio"
					label="PLG_SEARCH_ANSWERSES_FIELD_LABEL"
					description="PLG_SEARCH_ANSWERSES_FIELD_DESC"
					default="1"
				>
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
				</field>


                <field
				    name="search_archived_answerses"
				    type="radio"
					label="PLG_SEARCH_ANSWERSES_FIELD_ARCHIVED_LABEL"
					description="PLG_SEARCH_ANSWERSES_FIELD_ARCHIVED_DESC"
					default="0"
				>
                    <option value="1">JON</option>
                    <option value="0">JOFF</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					disable="separator"
					label="PLG_SEARCH_ANSWERSES_FIELD_ITEMID_LABEL"
					description="PLG_SEARCH_ANSWERSES_FIELD_ITEMID_DESC" >
                    <option
						value="">JDEFAULT</option>
                </field>				
            </fieldset>

		</fields>
	</config>
</extension>
