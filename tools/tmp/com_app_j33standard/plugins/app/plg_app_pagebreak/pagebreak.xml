<extension type="plugin" version="3.3" group="app" method="upgrade">
    <name>plg_app_pagebreak</name>
    <author></author>
    <creationDate>May 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>PLG_APP_PAGEBREAK_XML_DESCRIPTION</description>
	<files>
		<filename plugin="pagebreak">pagebreak.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_app_pagebreak.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_app_pagebreak.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
            <fieldset
                name="item"
                label="Item"
              >
                <field
                    name="title"
                    type="radio"
					label="PLG_APP_PAGEBREAK_SITE_TITLE_LABEL"
					description="PLG_APP_ITEMS_PAGEBREAK_SITE_TITLE_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                    name="item_index"
                    type="radio"
					label="PLG_APP_ITEMS_PAGEBREAK_SITE_INDEX_LABEL"
					description="PLG_APP_ITEMS_PAGEBREAK_SITE_INDEX_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                    name="item_index_text"
                    type="text" default=""
					label="PLG_APP_ITEMS_PAGEBREAK_SITE_INDEX_TEXT_LABEL"
					description="PLG_APP_ITEMS_PAGEBREAK_SITE_INDEX_TEXT_DESC"
				/>

                <field
                    name="multipage_toc"
                    type="radio"
					label="PLG_APP_PAGEBREAK_TOC_LABEL"
					description="PLG_APP_ITEMS_PAGEBREAK_TOC_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>

                <field
                    name="showall"
                    type="radio"
					label="PLG_APP_PAGEBREAK_SHOW_ALL_LABEL"
					description="PLG_APP_ITEMS_PAGEBREAK_SHOW_ALL_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
                <field
                    name="style"
                    type="list"
					label="PLG_APP_PAGEBREAK_STYLE_LABEL"
					description="PLG_APP_ITEMS_PAGEBREAK_STYLE_DESC"
			        class="chzn-color"
					default="pages"
				>
                    <option value="pages">PLG_APP_PAGEBREAK_PAGES</option>
                    <option value="sliders">PLG_APP_PAGEBREAK_SLIDERS</option>
                    <option value="tabs">PLG_APP_PAGEBREAK_TABS</option>
                </field>
            </fieldset>
        </fields>
	</config>
</extension>
