<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_modcreator_items</name>
    <author></author>
    <creationDate>July 2015</creationDate>
    <copyright>
    </copyright>
    <license>
        GNU General Public License version 3 or later; See http://www.gnu.org/copyleft/gpl.html
    </license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
	<description>MOD_MODCREATOR_ITEMS_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_modcreator_items">mod_modcreator_items.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_modcreator_items.xml</filename>
	</files>
	<languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_modcreator_items.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_modcreator_items.sys.ini</language>
	</languages>
	<config>
        <fields name="params">
			<fieldset 
			    name="items"
			    label="MOD_MODCREATOR_ITEMS_PARAMETERS"
			>
                <field
                    name="item_layout"
                    type="componentlayout"
                    label="JGLOBAL_FIELD_LAYOUT_LABEL"
                    description="COM_MODCREATOR_ITEMS_CHOOSE_LAYOUT_DESC"
                    menuitems="true"
                    extension="com_modcreator"
                    view="item"
                    default="_:default"
		        />
                <field
					name="count"
					type="text"
					default="5"
					label="MOD_MODCREATOR_ITEMS_FIELD_COUNT_LABEL"
					description="MOD_MODCREATOR_ITEMS_FIELD_COUNT_DESC"
				/>

                <field
					name="show_featured"
					type="list"
					label="MOD_MODCREATOR_ITEMS_FIELD_FEATURED_LABEL"
					description="MOD_MODCREATOR_ITEMS_FIELD_FEATURED_DESC"
					default=""
				>
                    <option
						value="">JSHOW</option>
                    <option
						value="0">JHIDE</option>
                    <option
						value="1">MOD_MODCREATOR_ITEMS_VALUE_ONLY_SHOW_FEATURED</option>
                </field>

                <field
					name="ordering"
					type="list"
					label="MOD_MODCREATOR_ITEMS_FIELD_ORDERING_LABEL"
					description="MOD_MODCREATOR_ITEMS_FIELD_ORDERING_DESC"
				>
                    <option value="c_dsc">MOD_MODCREATOR_ITEMS_VALUE_RECENT_ADDED</option>
                    <option value="m_dsc">MOD_MODCREATOR_ITEMS_VALUE_RECENT_MODIFIED</option>
                    <option value="p_dsc">MOD_MODCREATOR_ITEMS_VALUE_RECENT_PUBLISHED</option>
                    <option value="h_dsc">MOD_MODCREATOR_ITEMS_VALUE_MOST_HITS</option>
                    <option value="n_asc">MOD_MODCREATOR_ITEMS_VALUE_NAME_ALPHA</option>
                    <option value="n_dsc">MOD_MODCREATOR_ITEMS_VALUE_NAME_RALPHA</option>
                    <option value="o_asc">MOD_MODCREATOR_ITEMS_VALUE_ORDERING</option>
                </field>

                <field
					name="user_id"
					type="list"
					label="MOD_MODCREATOR_ITEMS_FIELD_USER_LABEL"
					description="MOD_MODCREATOR_ITEMS_FIELD_USER_DESC"
					default="0"
				>
                    <option value="0">MOD_MODCREATOR_ITEMS_VALUE_ANYONE</option>
                    <option value="by_me">MOD_MODCREATOR_ITEMS_VALUE_ADDED_BY_ME</option>
                    <option value="not_me">MOD_MODCREATOR_ITEMS_VALUE_NOTADDED_BY_ME</option>
                </field>
                <field
					name="style"
					type="list"
					label="MOD_MODCREATOR_ITEMS_FIELD_STYLE_LABEL"
					description="MOD_MODCREATOR_ITEMS_FIELD_STYLE_DESC"
					default=""
				>
                    <option value="">MOD_MODCREATOR_ITEMS_VALUE_PLAIN</option>
                    <option value="ul">MOD_MODCREATOR_ITEMS_VALUE_BULLETS</option>
                    <option value="ol">MOD_MODCREATOR_ITEMS_VALUE_NUMBERED</option>
                </field>
                <field
					name="itemid"
					type="menuitem"
					label="MOD_MODCREATOR_ITEMS_FIELD_ITEMID_LABEL"
					description="MOD_MODCREATOR_ITEMS_FIELD_ITEMID_DESC" >
                    <option	value="">JDEFAULT</option>
                </field>                
            </fieldset>

			<fieldset
				name="advanced"
			>
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>
				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
